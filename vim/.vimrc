set nocompatible

filetype on
filetype plugin on
filetype indent on

" Set colorcheme
colorscheme gruvbox
set background=dark

" Syntax highlighting
syntax on

" Show linenumbers
set number

set shiftwidth=4
set tabstop=4

" Set tab to use spaces
set expandtab

set smarttab

" Don't wrap long lines
set nowrap

" Case-insensitive search unless using capital letters
set ignorecase
set smartcase

set incsearch
set hlsearch

set history=100

" Show matchin bracket
set showmatch

" Always show current position
set ruler

" Command bar height
set cmdheight=2

" Autocomplete
set wildmenu
set wildmode=list:longest

" Disable sounds
set noerrorbells
set novisualbell

set encoding=utf8

" Enter search quickly with spacebar
map <space> /
map <c-space> ?

